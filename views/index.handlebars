<h1>Testing It</h1>
{{#each Trips}}
    <div class="columns">
        <div class="column is-half is-offset-one-quarter">
            <div class="card">
                <div class="card-image">
                    <figure class="image is-4by3">
                        <img src="{{this.link}}" alt="{{this.name}}">
                    </figure>
                </div>
                <div class="card-content">
                    <div class="media">
                        <div class="media-content">
                            <p class="title is-4">{{this.name}}</p>
                            <p class="subtitle is-6">{{this.description}}</p>
                        </div>
                    </div>
                </div>
                <div class="content">
                    {{!-- <div class="ratio ratio-1x1"> --}}
                   <div class="idkplzcenter">
                        <div class="iframe-container">
                            <iframe width="400" height="300" frameborder="0" src="{{this.map}}" scrolling="no">
                            </iframe>
                        </div>
                   </div>
                    {{!-- </div> --}}
                    <p>
                        <strong>Available hotels:</strong>
                        <ul>
                            {{#each this.hotels}}
                                <li>{{this.shortName}}</li>
                            {{/each}}
                        </ul>
                        <strong>Attractions:</strong>
                        <ul>
                            {{#each this.attractions}}
                                <div class="media-left">
                                        <figure class="image">
                                            <img src="{{this.link}}" alt="{{this.name}}">
                                        </figure>
                                    </div>
                                <li>
                                    {{this.name}}
                                </li>
                                <ul>
                                    <li>{{this.description}}</li>
                                </ul>
                            {{/each}}
                        </ul>
                        <strong>Social opportunities:</strong>
                        <ul>
                            {{#each this.social}}
                            <li><a href="{{this.link}}">{{this.name}} ({{this.time}} minutes)</a></li>
                            <ul>
                                <li>{{this.description}}</li>
                            </ul>
                            {{/each}}
                        </ul>
                    </p>
                </div>
            </div>
        </div>
    </div>
{{/each}}
