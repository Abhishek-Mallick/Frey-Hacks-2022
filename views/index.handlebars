<main>
    <div class="swiper mySwiper">
        <div class="swiper-wrapper img-swiper">
          <div class="swiper-slide "><img src="https://upload.wikimedia.org/wikipedia/commons/1/14/Mumbai_Skyline_at_Night.jpg"></div>
          {{#each Trips}}
            <div class="swiper-slide"><img src="{{this.link}}"></div>
          {{/each}}
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>
      </div>
</main>

<div style="margin-bottom:100px">
    <div class="Hotel-Search search-bar" id="hotel" style="position:relative; top: 50px;">
        <div class="container">
          <div class="card mb-4" style="background-color: rgba(255, 255, 255, 0.7);">
            <div class="card-body p-4">
              <div class="row justify-content-center">
                <div class="col-lg-12 col-xl-10 d-lg-flex flex-row mb-lg-4 mb-xl-0">
  
                        <form action="/api" method="POST">
                            <div id="basic" class="form-outline form-black flex-fill me-lg-2 mb-3 mb-lg-0">
                            <input type="text" id="form1" name="iata" class="form-control" />
                            <label class="form-label" for="form1">IATA of Destination Airport</label>
                        </div>

                        <div class="form-outline datepicker form-black flex-fill mx-lg-2 mb-3 mb-lg-0" data-mdb-toggle-button="false">
                            <input type="text" class="form-control" name="adults" id="exampleDatepicker1" data-mdb-toggle="datepicker" />
                            <label for="exampleDatepicker1" class="form-label">Number of Adults</label>
                        </div>

                        

                        </div>
                        <div class="col-lg-12 col-xl-2">
                        <input class="btn btn-primary  btn-block bg-black" type="submit" value="Find Trips" />
                        </div>
                        </form>
              </div>
            </div>
          </div>
        </div>
    </div>
</div>

<div class="columns is-multiline is-desktop">
{{#each Trips}}
 {{!-- <div class="idkplzcenter"> --}}
                   {{!-- </div> --}}
        <div class="column is-half">
            <div class="card">
                {{!-- <div class="card-image">
                    <figure class="image is-4by3">
                        <img src="{{this.link}}" alt="{{this.name}}">
                    </figure>
                </div> --}}
                <div class="card-content">
                    <div class="media">
                        <div class="media-content">
                            <p class="title is-4">{{this.name}} (${{this.price}})</p>
                            <p class="subtitle is-6">{{this.description}}</p>
                        </div>
                    </div>
                </div>
                <div class="content">
                    
                    {{!-- <div class="ratio ratio-1x1"> --}}
                   <div class="idkplzcenter">
                        <div class="iframe-container">
                            <iframe class="map""" width="400" height="300" frameborder="0" src="{{this.map}}" scrolling="no">
                            </iframe>
                        </div>
                   </div>
                    {{!-- </div> --}}
                    <p>
                        <strong style="text-align:center; font-size:18px;"></strong> Available hotels:</strong>
                        <ul>
                            {{#each this.hotels}}
                                <li>{{this.shortName}}</li>
                            {{/each}}
                        </ul>
                        <strong>Attractions:</strong>
                        <ul>
                            {{#each this.attractions}}
                                <div class="media-left">
                                        <figure class="image">
                                            <img src="{{this.link}}" alt="{{this.name}}">
                                        </figure>
                                    </div>
                                <li>
                                    {{this.name}}
                                </li>
                                <ul>
                                    <li>{{this.description}}</li>
                                </ul>
                            {{/each}}
                        </ul>
                        <strong>Social opportunities:</strong>
                        <ul>
                            {{#each this.social}}
                            <li><a href="{{this.link}}">{{this.name}} ({{this.time}} minutes)</a></li>
                            <ul>
                                <li>{{this.description}}</li>
                            </ul>
                            {{/each}}
                        </ul>
                    </p>
                </div>
            </div>
        </div>
{{/each}}
</div>
